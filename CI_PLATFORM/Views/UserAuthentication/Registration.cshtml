            <div class="col-xl-4 d-flex flex-column p-3 loginform">

               <form asp-action="Registration" asp-controller="UserAuthentication" class="d-flex flex-column flex-fill align-items-center form">
                 
                  
                <div class="row w-100">
                  <div class="col-md-6 col-xl-12 p-2 w-100 labletext">
                     <label for="exampleInputtext1" class="form-label">First Name</label>
                    @Html.TextBoxFor(m=>m.FirstName,new {@class="form-control"})
                    
                  </div>
                </div>
               <div class="row w-100">
                 <div class="col-md-6 col-xl-12 p-2 w-100">
                  <label for="exampleInputtext1" class="form-label">Last Name</label>
                   @Html.TextBoxFor(m=>m.LastName,new {@class="form-control"})
                 </div>
                </div>
               <div class="row w-100" >
                 <div class="col-md-6 col-xl-12 p-2 w-100">
                  <label for="exampleInputnumber1" class="form-label">Phone Number</label>
                  @Html.TextBoxFor(m=>m.PhoneNumber,new {@class="form-control"})
                </div>
              </div>
                <div class="row w-100">
                  <div class="col-md-6 col-xl-12 p-2 w-100">
                   <label for="exampleInputEmail1" class="form-label">Email address</label>
                      @Html.TextBoxFor(m=>m.Email,new {placeholder="evan.donohue@gmail.com",@class="form-control",type="email"})
                      @Html.ValidationMessageFor(m=>m.Email)
                  </div>
                </div>
            <div class="row w-100">
                <div class="col-md-6 col-xl-12 p-2 w-100">
              <label for="exampleInputpassword1" class="form-label">Password</label>
             @Html.PasswordFor(m=>m.Password,new {@class="form-control"})
            </div>
            </div>
            <div class="row w-100">
                <div class="col-md-6 col-xl-12 p-2 w-100">
              <label for="exampleInputpassword1" class="form-label">Confirm Password</label>
                @Html.PasswordFor(m=>m.ConfirmPassword,new {@class="form-control"})
                @Html.ValidationMessageFor(m=>m.ConfirmPassword)
            </div>
            </div>

            <div class="row w-100">
              <div class="col-md-6 col-xl-12 pt-4 w-100">
               


                <button class="registrationbtn" type="submit" formmethod="post"  style="color: #F88634;">Register</button>
              </div>
            </div>
              
              <div class="row w-100">
              <div class="mb-3 text-center d-flex flex-column p-2 w-100 text">
                <a asp-controller="UserAuthentication" asp-action="lostpassword" class="text-decoration-none lost-password p-3 lostpass">Lost your Password?</a>

                <p>Already registered ? <a class="text-decoration-none" asp-controller="UserAuthentication" asp-action="login">Login now</a></p>
              </div>
              </div>
            

